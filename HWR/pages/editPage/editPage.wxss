/* pages/editPage/editPage.wxss */
/* 页面容器 */
.container {
  padding: 20px;
  background-color: #222831;
}
.arrow-icon {
  width:30px;
  height:30px;
  margin-top:42px;
  margin-right:350px;
}
.circle {
  width: 170px;  /* 圆形的宽度 */
  height: 170px; /* 圆形的高度 */
  border-radius: 50%; /* 使元素变成圆形 */
  background-color: #FFFFFF; /* 圆形的颜色 */
  margin-top:-90px;
  margin-left:65px;
}
.info-box{
  width: 75%;
  padding: 20px;
  background-color: #FFFFFF;
  border-radius: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  text-align: left;
  margin-top: 30px;
}
/* 头像部分 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 120px;
  height: 120px;
  border-radius: 50%;
  margin-bottom: 10px;
  margin-top:-150px;
}

.edit-icon {
  width: 15px;
  height: 15px;
  position: absolute;
  bottom: 20px;
  right: 90px;
}

/* 信息输入部分 */
.info-section {
  margin-bottom: 20px;
}

.label {
  font-size: 16px;
  color: #00ADB5;
  margin-bottom: 5px;
  margin-left:40px;
}


.me-icon{
  width:18px;
  height:18px;
  margin-bottom:-20px;
  margin-left:17px;
}

.telephone-icon{
  width:18px;
  height:18px;
  margin-bottom:-20px;
  margin-left:17px;
}

.stylegreen-icon{
  width:18px;
  height:18px;
  margin-bottom:-20px;
  margin-left:17px;
}
.input {
  width: 75%;
  padding: 10px;
  border-radius: 10px;
  border: 1px solid #D8E0F0;
  background-color: #FFFFFF;
  margin-left:20px;
}

/* 保存按钮 */
.save-button button{
  width: 75%;
  padding: 12px;
  background-color: #00ADB5;
  color: #FFFFFF;
  font-size:16px;
  border: none;
  border-radius: 10px;
}
.success-message {
  margin-top: 20px;
  padding: 10px;
  color: white;
  border-radius: 5px;
  text-align: center;
}
.icon-in-bottom{
  margin-left: -5px;
  width: 252.6px;
  height: 100px;
  margin-bottom: 0px;
}