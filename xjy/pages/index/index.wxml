<!--index.wxml-->
<!--常用功能容器-->
<view class = "common-function">
    <text class = "title">常用功能</text>
    <view class = "buttons">
        <button>
            <image class= "icon" src = "/img/onDuty.svg"/>
            <text>值班签到</text>
        </button>
        <button>
            <image class= "icon clean" src = "/img/clean.svg"/>
            <text>扫除签到</text>
        </button>
        <button>
            <image class= "icon remote" src = "/img/remote.svg"/>
            <text>远程控制</text>
        </button>
        <button>
            <image class= "icon apply-duty" src = "/img/applyDuty.svg"/>
            <text>值班申请</text>
        </button>
    </view>
</view>

<!--部门工作容器-->
<view class = "work">
    <text class = "title">部门工作</text>
    <view class="cat-head">  
        <view class = "department">
            <image class = "avatar" src = "/img/department_img.png" />
            <view class = "text-box">
                <text class = "name">宣传部</text>
                <text class = "duty">海报、推文、
                宣传信息管理等</text>
            </view>
            <button class = "manage" bind:tap = "jumpToPublicityWorkPage">进入管理</button>
        </view>  
        <image class = "split left" src="/img/circuit_split.svg"/>
        <view class = "department">
            <image class = "avatar" src = "/img/department_img.png" />
            <view class = "text-box">
                <text class = "name">基管部</text>
                <text class = "duty">物资管理、
                基地管理等</text>
            </view>
            <button class = "manage" bind:tap = "jumpToBaseManagementWorkPage">进入管理</button>       
        </view>
        <image class = "split right" src="/img/circuit_split.svg"/>  
        <view class = "department">
            <image class = "avatar" src = "/img/department_img.png" />
            <view class = "text-box">
                <text class = "name">项目部</text>
                <text class = "duty">项目跟进、
                档案管理等</text>
            </view>
            <button class = "manage" bind:tap = "jumpTopProjectWorkPage">进入管理</button>      
        </view> 
        <image class = "split left" src="/img/circuit_split.svg"/> 
        <view class = "department">
            <image class = "avatar" src = "/img/department_img.png" />
            <view class = "text-box">
                <text class = "name">运维部</text>
                <text class = "duty">网络管理、
                服务器运维等</text>
            </view>
            <button class = "manage" bind:tap = "jumpToMaintenanceWorkPage">进入管理</button>
        </view>  
    </view>
</view>

